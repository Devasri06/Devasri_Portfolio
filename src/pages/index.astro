---
import Layout from '../layouts/Layout.astro';
import Skill from './Skill.astro';
import {Image} from 'astro:assets';
import Portfolioimage from '../assets/images/Portfolioimage.png';
import About from './About.astro';
import Contact from './Contact.astro';

const projects = [
  {
    name: "Portfolio for a Company- Sastika Solutions",
    
    line1: `A professional portfolio website built for a trust-based organization. Designed a clean, modern UI that reflects the company's credibility and values.`,
    line2:"Tech Stack: Astro.js, Tailwind CSS",
    line3:   "Role: Front-End Developer",
    line4:"Highlights: Fully responsive design, fast static site generation, and optimized for SEO.",
    github: "https://sastika.eu",
    
  },
  {
    name: "Portfolio for a Student - Franz Kingstein",
    
    line1: `A professional portfolio website built for a trust-based organization. Designed a clean, modern UI that reflects the company's credibility and values.`,
    line2:"Tech Stack: HTML, Bootstrap",
